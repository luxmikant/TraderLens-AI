# =====================================================
# Tradl AI - Environment Configuration Template
# =====================================================
# Copy this file to .env and fill in your API keys

# ================== LLM Configuration ==================
# Choose provider: "openai" or "groq"
LLM_PROVIDER=openai

# OpenAI Configuration (Recommended)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Groq Configuration (Alternative - free tier has 100k tokens/day limit)
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.3-70b-versatile

# Anthropic Configuration (Optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ================== RAG Configuration ==================
RAG_ENABLED=true
RAG_MAX_CONTEXT_DOCS=5
RAG_TEMPERATURE=0.3

# ================== Database Configuration ==================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=financial_news
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# ================== Redis Cache (Production) ==================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ================== ChromaDB Configuration ==================
CHROMA_PERSIST_DIR=./chroma_db

# ================== Embedding Model ==================
EMBEDDING_MODEL=all-mpnet-base-v2

# ================== Deduplication ==================
DEDUP_THRESHOLD=0.85

# ================== API Configuration ==================
API_HOST=0.0.0.0
API_PORT=8000

# ================== Scheduler Configuration ==================
RSS_FETCH_INTERVAL_MINUTES=5
NSE_FETCH_INTERVAL_MINUTES=15

# ================== LangSmith Tracing (Optional) ==================
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your-langchain-api-key-here
LANGCHAIN_PROJECT=tradl-hackathon
LANGSMITH_ENDPOINT=https://api.smith.langchain.com